{% extends 'layouts/app.twig' %}
{% block title %}Добавить задачу{% endblock %}

{% block content %}
    <div class="container mt-5">
        <h1 class="display-6 border-bottom">Добавить задачу</h1>

        <div class="d-flex justify-content-center mt-5">
            <form action="/" method="post" class="w-50">
                <div class="mb-3">
                    <label for="userName" class="form-label">Кому?</label>
                    <input type="text" class="form-control" id="userName" name="userName" aria-describedby="userNameHelp" required>
                    <div id="userNameHelp" class="form-text">Введите имя пользователя</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" name="email" id="email" required>
                    <div id="emailHelp" class="form-text">Укажеите e-mail пользователя</div>
                </div>
                <div class="mb-3">
                    <label for="text" class="form-label">Текст</label>
                    <textarea name="text" id="text" rows="5" class="form-control" required></textarea>
                    <div id="emailHelp" class="form-text">Введите текст задачи</div>
                </div>
                <button type="submit" class="btn btn-primary">Cохранить</button>
            </form>
        </div>
    </div>
{% endblock %}